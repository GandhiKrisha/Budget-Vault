<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".AllPodcastsActivity">

    <!-- Top Bar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/cardBackgroundColor"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                app:srcCompat="@drawable/back_arrow_direction_down_right_left_up_svgrepo_com"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Budgeting Podcasts"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Podcast 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/jessepodcast"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The Jesse Mecham Show"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="I always struggle to pay rent each month after bills double. Learn budgeting hints and tricks with premium podcaster Jesse Mecham."
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="?attr/accentColor"
                            android:text="Listen"
                            android:textColor="?attr/cardBackgroundColor"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Podcast 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/budgetnerds"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Budget Nerds"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Master budgeting with analysts as they share budgeting tips, strategies for beginners to advanced, and how to find a financial plan that fits comfortably."
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="?attr/accentColor"
                            android:text="Listen"
                            android:textColor="?attr/cardBackgroundColor"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Podcast 3 - Additional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pod3"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ditch debt reach goals "
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Real conversations about paying off debt and building wealth by utilizing a simple tool, the budget. Period. Episodes also include live on-air segments with Kelly Cordes from WJON!"
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="?attr/accentColor"
                            android:text="Listen"
                            android:textColor="?attr/cardBackgroundColor"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Podcast 4 - Additional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pod4"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DIY Money| Personal finance , Budgeting , Debt savings | Investing "
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Budgeting, Savings, Investing, Wealth Management for those that choose to Do It Yourself."
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast4"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="?attr/accentColor"
                            android:text="Listen"
                            android:textColor="?attr/cardBackgroundColor"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Podcast 5 - Additional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pod5"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ideas That Matter Podcast by Vusi Themekwayo"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tune into Ideas That Matter, the must-listen Vusi Thembekwayo Podcast where he explores thought-provoking discussions, innovative insights, and real-world solutions on topics that truly impact your life and business. Be part of the conversation, we are happy to have you."
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast5"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Listen"
                            android:textSize="10sp"
                            android:backgroundTint="?attr/accentColor"
                            android:textColor="?attr/cardBackgroundColor"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Podcast 6 - Additional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pod6"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yes Money Does Matter - A Financial Fitness Bunny Podcast "
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Join Nicolette Mashile aka The Financial Bunny talk all things money management."
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast6"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Listen"
                            android:textSize="10sp"
                            android:backgroundTint="?attr/accentColor"
                            android:textColor="?attr/cardBackgroundColor"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Podcast 7 - Additional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pod7"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:outlineProvider="background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The Ramsey Show "
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The Ramsey Show believes you can build wealth and take control of your life—no matter what stupid mistakes you've made with money. Join as Dave Ramsey and his team of experts answer your questions on the top problems holding you back. Listen now or ask your question live by calling 888.825.5225 weekdays from 2–5 p.m. ET. Learn more at www.ramseysolutions.com."
                            android:textColor="?attr/textSecondaryColor"
                            android:textSize="12sp"
                            android:maxLines="3"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/listenPodcast7"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Listen"
                            android:textSize="10sp"
                            android:backgroundTint="?attr/accentColor"
                            android:textColor="?attr/cardBackgroundColor"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>