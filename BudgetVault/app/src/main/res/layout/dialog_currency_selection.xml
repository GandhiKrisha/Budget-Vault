<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_background">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <!-- INR Currency -->
            <TextView
                android:id="@+id/currencyINR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ INR"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:background="@drawable/currency_button_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="4dp"/>

            <!-- ZAR Currency -->
            <TextView
                android:id="@+id/currencyZAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R ZAR"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:background="@drawable/currency_button_selected_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="4dp"/>

            <!-- GBP Currency -->
            <TextView
                android:id="@+id/currencyGBP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="£ GBP"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:background="@drawable/currency_button_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="4dp"/>

            <!-- EUR Currency -->
            <TextView
                android:id="@+id/currencyEUR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€ EUR"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:background="@drawable/currency_button_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="4dp"/>

            <!-- CNY Currency -->
            <TextView
                android:id="@+id/currencyCNY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ CNY"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:background="@drawable/currency_button_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="4dp"/>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>