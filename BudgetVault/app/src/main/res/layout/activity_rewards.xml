<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".RewardsActivity">

    <!-- Top Bar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/cardBackgroundColor"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                app:srcCompat="@drawable/back_arrow_direction_down_right_left_up_svgrepo_com"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rewards"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- XP Progress Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/progressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/levelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 1"
                        android:textColor="?attr/textPrimaryColor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/xpProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="25"
                        android:progressTint="?attr/accentColor"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/xpProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 XP / 100 XP to Level 2"
                        android:textColor="?attr/textSecondaryColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Savings Badges Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/badgesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/expenseListBgColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Badges"
                        android:textColor="?attr/textPrimaryColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Badge Grid Container -->
                    <LinearLayout
                        android:id="@+id/badgesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Badges will be dynamically added here -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Complete activities to unlock badges!"
                            android:textSize="16sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:gravity="center"
                            android:padding="24dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quiz Card (existing) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quizCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/quizicon"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mini_budgeting_quiz_title"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Quiz Question Container (This will be dynamically updated) -->
                    <LinearLayout
                        android:id="@+id/quizContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/questionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_completed"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp" />

                        <!-- Option A -->
                        <RadioButton
                            android:id="@+id/optionA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_a"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:background="?attr/dividerColor"
                            android:layout_marginBottom="8dp" />

                        <!-- Option B -->
                        <RadioButton
                            android:id="@+id/optionB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_b"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:background="?attr/dividerColor"
                            android:layout_marginBottom="8dp" />

                        <!-- Option C -->
                        <RadioButton
                            android:id="@+id/optionC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_c"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:background="?attr/dividerColor"
                            android:layout_marginBottom="8dp" />

                        <!-- Option D -->
                        <RadioButton
                            android:id="@+id/optionD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_d"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:background="?attr/dividerColor"
                            android:layout_marginBottom="16dp" />

                        <!-- Quiz Navigation Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/resetButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="?attr/textPrimaryColor"
                                android:text="@string/reset_button"
                                android:textColor="?attr/cardBackgroundColor" />

                            <Button
                                android:id="@+id/nextButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:backgroundTint="?attr/textPrimaryColor"
                                android:text="@string/next_button"
                                android:textColor="?attr/cardBackgroundColor" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Quiz Results Container (Initially Hidden) -->
                    <LinearLayout
                        android:id="@+id/quizResultsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_completed"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/scoreText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/score_text"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/accentColor"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/scoreComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/score_text"
                            android:textSize="16sp"
                            android:textColor="?attr/textPrimaryColor"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/pointsEarned"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/points_earned"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FF6D00"
                            android:gravity="center"
                            android:layout_marginBottom="24dp" />

                        <!-- Added Lottie Animation -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/moneyAnimation"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/moneygrow" />

                        <Button
                            android:id="@+id/restartQuizButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="?attr/accentColor"
                            android:text="@string/restart_quiz_button"
                            android:textColor="?attr/cardBackgroundColor" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Unlock More Rewards Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/unlockMoreCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How to Earn Rewards"
                        android:textColor="?attr/textPrimaryColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- List of ways to earn rewards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Add an expense (+10 XP)"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Add income (+15 XP)"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Set budget limits (+25 XP)"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Complete quiz (+50 XP)"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Watch advice videos (+20 XP)"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Invite a friend (+30 XP)"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_curved_background"
        app:itemIconTint="?attr/textPrimaryColor"
        app:itemTextColor="?attr/textPrimaryColor"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearance="@style/BottomNavigationView.ItemTextAppearance"
        app:itemIconSize="24dp"
        app:itemPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>