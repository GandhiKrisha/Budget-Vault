<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".SettingsActivity">

    <!-- Top Bar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/cardBackgroundColor"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                app:srcCompat="@drawable/back_arrow_direction_down_right_left_up_svgrepo_com"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_title"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Settings Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/settingsgears"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Turn On Notifications Button -->
            <Button
                android:id="@+id/notificationsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/turn_on_notifications"
                android:textColor="?attr/cardBackgroundColor"
                android:backgroundTint="?attr/textPrimaryColor"
                android:layout_marginBottom="12dp"/>

            <!-- Invite a Friend Button -->
            <Button
                android:id="@+id/inviteFriendButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invite_friend"
                android:textColor="?attr/cardBackgroundColor"
                android:backgroundTint="?attr/textPrimaryColor"
                android:layout_marginBottom="12dp"/>

            <!-- Change Currency Button -->
            <Button
                android:id="@+id/changeCurrencyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_currency"
                android:textColor="?attr/cardBackgroundColor"
                android:backgroundTint="?attr/textPrimaryColor"
                android:layout_marginBottom="12dp"/>

            <!-- Change Language Button -->
            <Button
                android:id="@+id/changeLanguageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_language"
                android:textColor="?attr/cardBackgroundColor"
                android:backgroundTint="?attr/textPrimaryColor"
                android:layout_marginBottom="12dp"/>

            <!-- Change Theme Button -->
            <Button
                android:id="@+id/changeThemeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_theme"
                android:textColor="?attr/cardBackgroundColor"
                android:backgroundTint="?attr/textPrimaryColor"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>