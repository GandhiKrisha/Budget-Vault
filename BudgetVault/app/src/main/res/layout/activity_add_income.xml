<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".AddIncomeActivity">

    <!-- Top Bar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/cardBackgroundColor"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                app:srcCompat="@drawable/back_arrow_direction_down_right_left_up_svgrepo_com"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_income_title"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Date Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/dateInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/date_input_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- Amount Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="16dp"/>

                <!-- Source of Income Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_source"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/incomeCategoriesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/addSourceButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textSize="18sp"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/salaryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salary"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/savingsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/savings"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/investmentButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/investment"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/selectedSourceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_select_or_add_source"
                    android:textSize="14sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_marginBottom="16dp"/>

                <!-- Description Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description_input_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="textMultiLine"
                    android:minLines="1"
                    android:maxLines="3"
                    android:layout_marginBottom="24dp"/>

                <!-- Buttons -->
                <Button
                    android:id="@+id/addIncomeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_income_button"
                    android:backgroundTint="?attr/textPrimaryColor"
                    android:textColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_button"
                    android:backgroundTint="?attr/textPrimaryColor"
                    android:textColor="?attr/cardBackgroundColor"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>