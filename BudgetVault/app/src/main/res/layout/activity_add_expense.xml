<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".AddExpenseActivity">

    <!-- Top Bar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/cardBackgroundColor"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                app:srcCompat="@drawable/back_arrow_direction_down_right_left_up_svgrepo_com"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_expense_title"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/cardBackgroundColor"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Date Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/dateInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/date_input_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- Start Time Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/startTimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_time_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- End Time Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/endTimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/end_time_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- Category Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/categoriesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/addCategoryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textSize="18sp"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/rentCategoryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rent_category"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/transportCategoryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transport_category"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/entertainmentCategoryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/entertainment_category"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/clothingCategoryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clothing_category"
                            android:textColor="?attr/textPrimaryColor"
                            android:backgroundTint="?attr/dividerColor"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/selectedCategoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_expense_category"
                    android:textSize="14sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_marginBottom="16dp"/>

                <!-- Description Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description_input_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="textMultiLine"
                    android:minLines="1"
                    android:maxLines="3"
                    android:layout_marginBottom="16dp"/>

                <!-- Amount Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_label"
                    android:textSize="16sp"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount_hint"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="24dp"/>

                <!-- Buttons -->
                <Button
                    android:id="@+id/attachPhotoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attach_photo_button"
                    android:backgroundTint="?attr/textPrimaryColor"
                    android:textColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/saveExpenseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_expense_button"
                    android:backgroundTint="?attr/accentColor"
                    android:textColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_button"
                    android:backgroundTint="?attr/textPrimaryColor"
                    android:textColor="?attr/cardBackgroundColor"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_curved_background"
        app:itemIconTint="?attr/textPrimaryColor"
        app:itemTextColor="?attr/textPrimaryColor"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearance="@style/BottomNavigationView.ItemTextAppearance"
        app:itemIconSize="24dp"
        app:itemPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>