<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".DashboardActivity">

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Bar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/cardBackgroundColor"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_title"
                    android:textColor="?attr/textPrimaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

            <!-- Quick Actions Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quickActionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Home -->
                    <LinearLayout
                        android:id="@+id/homeButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/homeBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/home"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/home_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/home_text"
                            android:textSize="12sp"
                            android:textColor="?attr/textPrimaryColor" />
                    </LinearLayout>


                    <!-- Personal Chatbot -->
                    <LinearLayout
                        android:id="@+id/chatbotButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/aiBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ai"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/ai_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/ai_text"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="?attr/textPrimaryColor" />
                    </LinearLayout>

                    <!-- Reports -->
                    <LinearLayout
                        android:id="@+id/reportsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/reportBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/barchart"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/report_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/report_text"
                            android:textSize="12sp"
                            android:textColor="?attr/textPrimaryColor" />
                    </LinearLayout>

                    <!-- Settings -->
                    <LinearLayout
                        android:id="@+id/settingsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/settingsBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/settingsblack"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/settings_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/settings_text"
                            android:textSize="12sp"
                            android:textColor="?attr/textPrimaryColor" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Expenses Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/expensesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:layout_constraintTop_toBottomOf="@id/quickActionsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Current Total Expenses"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor" />

                        <Button
                            android:id="@+id/viewDetailsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:minHeight="48dp"
                            android:text="@string/view_details"
                            android:textColor="?attr/accentColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_expenses_label"
                                android:textSize="12sp"
                                android:textColor="?attr/textSecondaryColor" />

                            <TextView
                                android:id="@+id/totalExpensesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R0.00"
                                android:textColor="?attr/textPrimaryColor"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/min_spending_goal_label"
                                android:textSize="12sp"
                                android:textColor="?attr/textSecondaryColor" />

                            <TextView
                                android:id="@+id/minSpendingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R0.00"
                                android:textColor="?attr/textPrimaryColor"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/max_spending_goal_label"
                                android:textSize="12sp"
                                android:textColor="?attr/textSecondaryColor" />

                            <TextView
                                android:id="@+id/maxSpendingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R0.00"
                                android:textColor="?attr/textPrimaryColor"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/addExpenseButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/textPrimaryColor"
                            android:text="@string/add_expense_button"
                            android:textColor="?attr/cardBackgroundColor" />

                        <Button
                            android:id="@+id/addIncomeButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/textPrimaryColor"
                            android:text="@string/add_income_button"
                            android:textColor="?attr/cardBackgroundColor" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Expense List Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/expenseListCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/expenseListBgColor"
                app:layout_constraintTop_toBottomOf="@id/expensesCard">

                <LinearLayout
                    android:id="@+id/expenseItemsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/viewAllButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:text="View All" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Budget Achievements Gamification Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/budgetAchievementsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:layout_constraintTop_toBottomOf="@id/expenseListCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Progress &amp; Rewards"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor" />

                        <Button
                            android:id="@+id/rewardsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Rewards"
                            android:textSize="12sp"
                            android:backgroundTint="?attr/accentColor"
                            android:textColor="?attr/cardBackgroundColor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/levelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 1"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/achievementsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŽ‰ You've unlocked 0 out of 8 badges!"
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/goalProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="?attr/accentColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep it up! Set and reach more goals to earn badges and rewards!"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="?attr/textSecondaryColor" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_curved_background"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearance="@style/BottomNavigationView.ItemTextAppearance"
        app:itemIconSize="24dp"
        app:itemPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>